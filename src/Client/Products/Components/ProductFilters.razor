<div class="field">
    <div class="control has-icons-left">
        <input class="input" type="search" placeholder="Zoeken..." value="@searchTerm" @onchange="SearchTermChanged">
        <span class="icon is-left">
            <i class="fas fa-search" aria-hidden="true"></i>
        </span>
    </div>
</div>

<div class="field">
    <label class="label has-text-grey">Categorie</label>
    <div class="control is-expanded">
        <div class="select is-fullwidth">
            <select @onchange="TagChanged">
                <option value="">Selecteer</option>
                <option value="1">Vers</option>
                <option value="2">Bevroren</option>
                <option value="3">Hout</option>
                <option value="4">Rubber</option>
                <option value="5">Metaal</option>
            </select>
        </div>
    </div>
</div>

<div class="field columns">
    <div class="column">
        <label class="label has-text-grey">Min. Prijs</label>
        <div class="control is-expanded has-icons-left">
            <input class="input has-text-right" type="number" placeholder="0.00" min="0" value="@minPrice" @onchange="@MinPriceChanged">
            <span class="icon is-left">
                <i class="fas fa-euro"></i>
            </span>
        </div>
    </div>

    <div class="column">
        <label class="label has-text-grey">Max. Prijs</label>
        <div class="control is-expanded has-icons-left">
            <input class="input has-text-right" type="number" placeholder="0.00" min="0" value="@maxPrice" @onchange="@MaxPriceChanged">
            <span class="icon is-left">
                <i class="fas fa-euro"></i>
            </span>
        </div>
    </div>
</div>